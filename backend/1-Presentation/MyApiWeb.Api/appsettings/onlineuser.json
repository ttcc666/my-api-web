{
  // ========================================
  // 在线用户管理配置
  // ========================================
  "OnlineUser": {
    // 定时清理任务 Cron 表达式
    // 格式: 秒 分 时 日 月 星期 [年]
    // 示例:
    //   "0 */5 * * * ?" - 每5分钟执行一次
    //   "0 0 */1 * * ?" - 每小时执行一次
    //   "0 0 2 * * ?" - 每天凌晨2点执行
    //   "0 0/30 * * * ?" - 每30分钟执行一次
    "CleanupCronExpression": "0 */5 * * * ?",

    // 连接超时时间 (分钟)
    // 超过此时间未收到心跳的连接将被标记为离线
    // 建议: 10-30 分钟
    "ConnectionTimeoutMinutes": 15,

    // 心跳推荐间隔 (分钟)
    // 客户端应按此间隔调用 Heartbeat 方法
    // 建议: 1-3 分钟
    "RecommendedHeartbeatIntervalMinutes": 2
  }
}
