{
  // ========================================
  // 基础日志配置 (仅用于非 Serilog 的日志提供程序)
  // ========================================
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // ========================================
  // 允许的主机配置
  // ========================================
  // "*" 表示允许所有主机名访问 (开发环境)
  // 生产环境建议设置为具体域名: "yourdomain.com;www.yourdomain.com"
  "AllowedHosts": "*"

  // ========================================
  // 模块化配置说明
  // ========================================
  // 其他配置已按模块拆分到 appsettings 文件夹:
  // - appsettings/database.json  : 数据库连接和迁移配置
  // - appsettings/jwt.json       : JWT 身份认证配置
  // - appsettings/cors.json      : CORS 跨域配置
  // - appsettings/cap.json       : CAP 消息总线配置
  // - appsettings/serilog.json   : Serilog 日志配置
  //
  // 这些配置文件会在 Program.cs 中自动加载
  // ========================================
}
